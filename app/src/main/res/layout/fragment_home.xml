<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.view.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homefragment">

    <fragment
        class="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_menu_24"
        android:background="@drawable/round_corner"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:src="@drawable/pin_icon"
        />

<!--    <ImageButton-->
<!--        android:id="@+id/btn_current_location"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintBottom_toTopOf="@id/bottom_popup"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        android:src="@drawable/ic_baseline_my_location_24"-->
<!--        android:background="@drawable/round_corner"-->
<!--        android:layout_marginBottom="32dp"-->
<!--        android:layout_marginEnd="16dp"-->
<!--        android:padding="10dp"-->
<!--        />-->

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottom_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/btn_check_next_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_24"
            android:background="@drawable/round_corner"
            android:padding="10dp"
            android:layout_marginBottom="48dp"
            android:layout_marginStart="16dp"
            app:layout_anchor="@id/bottom_layout_1"
            android:layout_gravity="start"
            />

        <ImageButton
            android:id="@+id/btn_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_my_location_24"
            android:background="@drawable/round_corner"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            android:padding="10dp"
            android:layout_gravity="end"
            app:layout_anchorGravity="end"
            app:layout_anchor="@id/bottom_layout_1"
            />
        <include
            android:id="@+id/bottom_layout_1"
            layout="@layout/bottom_sheet_dialog"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>